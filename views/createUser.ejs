<%- include('./Components/head.ejs') %>
    <title>Profile</title>

    <body>
        <%- include('./Components/navbar') %>
            <div class="container" style="height: auto; ">
                <br>
                <form action="/<%= route %>?_method=<%= method %>" method="post"
                    style="height: 90%; width: 70%; margin: 0 auto;  box-shadow: 0 0.4em 0.9em black; border-top-left-radius: 0.8em; border-bottom-right-radius: 0.8em; text-align: center; ">
                    <h3 style="color: blue;">
                        <%= heading %>
                    </h3>
                    <!-- display: flex; flex-direction: column; align-content: space-around; align-items: center; justify-content: space-around; -->
                    <br>
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm">
                            <label for="name"><b>Name</b></label>
                            <input type="text" id="name" name="name">
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm">
                            <label for="name"><b>Email id</b> :</label>
                            <input type="email" id="name" name="username">
                        </div>
                    </div>
                    <br>
                    <br>
                    <br>
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm">
                            <label for="name"><b>Phone No:</b></label>
                            <input type="text" id="name" name="contact">
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm">
                            <label for="name"><b>Password:</b></label>
                            <input type="text" id="name" name="password">
                        </div>
                    </div>
                    <br>
                    <br>
                    <br>
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm">
                            <label for="name"><b>Address</b></label>
                            <input type="text" id="name" name="address">
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm">
                            <label for="name"><b>Current City:</b></label>
                            <input type="text" id="name" name="city">
                        </div>
                    </div>
                    <br>
                    <br>
                    <br>
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm">
                            <label for="name"><b> Current State</b></label>
                            <input type="text" id="name" name="state">
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm">
                            <label for="name"><b>Country:</b></label>
                            <input type="text" id="name" name="country">
                        </div>
                    </div>
                    <br>
                    <br>
                    <button onclick=<%="addUser()" %>>Create Profile</button>


                </form>
                <br>
                <br>
            </div>
            <br>
            <%- include('./Components/footer.ejs') %>
    </body>

    </html>